<view class="shadow" hidden="{{ show }}">
	<view class="authModel">
		<view class="title">
			授权请求
		</view>
		<view class="des">
			为了正常使用,请授权获取您的昵称信息
		</view>
		<view class="body">
			<view class="avatar">
				<!-- 展现用户信息但后台未获取 -->
				<open-data type="userAvatarUrl"></open-data>
			</view>
			<view class="nickname">
				<open-data type="userNickName"></open-data>
			</view>
		</view>
		<view class="action">
			<button type="primary" class="allow" open-type="getUserInfo" bindgetuserinfo='userInfoHandle'>
				允许
			</button>
		</view>
	</view>
</view>
